<% layout('/layouts/boilerplate') %>

    <h1 class="col-6 offset-3">Log In for WanderLust</h1>
    <div class="row mt-3">
        <div class="col-6 offset-3">
            <form action="/users/login" method="post">

                <div class="mb-3">
                    <label for="username" class="form-label">Username: </label>
                    <input name="username" id="username" type="text" class="form-control" required>

                    <div class="valid-feedback">Username looks good!</div>
                    <div class="invalid-feedback">Username should be valid</div>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password: </label>
                    <input name="password" id="password" type="password" class="form-control" required>

                    <div class="valid-feedback">Password looks good!</div>
                    <div class="invalid-feedback">Password should be valid</div>
                </div>

                <button class="btn btn-dark">Log In</button>
            </form>
            <hr>
            <a href="auth/google" class="btn btn-danger">Log In with Google</a>

        </div>
    </div>