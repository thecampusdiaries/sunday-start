<%- layout("/layouts/boilerplate") %>

    <body>
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card shadow-sm">
                        <div class="card-header bg-light text-center">
                            <% if (user._id.equals(currUser._id)) { %>
                                <h3 class="my-0">Your Profile</h3>
                                <% } else { %>
                                    <h3 class="my-0">User Profile</h3>
                                    <% } %>
                        </div>

                        <div class="card-body">
                            <!-- Display User Profile Image -->
                            <div class="text-center mb-4">
                                <img src="<%= user.profile.profileImage.url %>"
                                    class="rounded-circle img-thumbnail mt-3" alt="Profile Image"
                                    style="width: 150px; height: 150px;">
                            </div>

                            <!-- Display User Email -->
                            <div class="mb-4">
                                <h5 class="card-title">Email</h5>
                                <p class="card-text text-muted">
                                    <%= user.email %>
                                </p>
                            </div>

                            <!-- Display Username -->
                            <div class="mb-4">
                                <h5 class="card-title">Username</h5>
                                <p class="card-text text-muted">
                                    <%= user.username %>
                                </p>
                            </div>

                            <!-- Display User Bio -->
                            <div class="mb-4">
                                <h5 class="card-title">Bio</h5>
                                <p class="card-text text-muted">
                                    <%= user.profile.bio %>
                                </p>
                            </div>

                            <!-- Edit and Delete buttons for the profile owner -->
                            <% if (user._id.equals(currUser._id)) { %>
                                <div class="d-flex justify-content-between mt-4">
                                    <a href="/users/<%= user._id %>/profile/edit" class="btn btn-warning">Edit
                                        Profile</a>
                                    <form action="/users/<%= user._id %>/profile/?_method=DELETE" method="POST"
                                        onsubmit="return confirm('Are you sure you want to delete your profile?');">
                                        <button type="submit" class="btn btn-danger">Delete Profile</button>
                                    </form>
                                </div>
                                <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>